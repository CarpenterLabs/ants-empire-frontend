{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "vite-plugin-svgr/client"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*"],
      "@ComponentsRoot/*": ["src/components/*"],
      "@ControlPanelComponents/*": ["src/components/ControlPanel/components/*"],
      "@Layout/*": ["src/layout/*"],
      "@Public/*": ["public/*"],
      "@Services/*": ["src/services/*"],
      "@MainThemeStyles/*": ["src/theme/*"],
      "@MainUtils/*": ["src/utils/*"],
      "@DataSource/*": ["src/data/datasource/*"],
      "@DataEntity/*": ["src/data/entity/*"],
      "@DataMappers/*": ["src/data/mappers/*"],
      "@ScssMain/*": ["src/styles/*"],
      "@Assets/*": ["src/assets/*"],
      "@Repositories/*": ["src/repositories/*"],
      "@RootPath/*": ["src/*"]
    }
  },
  "include": ["src"]
}
